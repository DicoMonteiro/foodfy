{% extends "../layout_admin.njk" %}

{% block title %}
  <title>Editar</title>
{% endblock %}

{% block content %}
  <div class="card">
    <div class="form-actions">
      <form id="form-delete" action="/admin/chefs?_method=DELETE" method="post">
      {# Colocar uma div para tratar os chefs que podem ou n√£o ser deletados #}
        <div class="total-recipes" data-total={{chef.total_recipes}}></div>
        <div class="details-edit">
          <h1>Editando Chef</h1>
          <input type="hidden" name="id" value={{ chef.id }}>
          <button class="delete" type="submit">Deletar</button>
        </div>
      </form>

      <form method="POST" action="/admin/chefs?_method=PUT">
        <div class="details-edit">
          <input type="hidden" name="id" value={{ chef.id }}>
          <button class="save" type="submit">Salvar chef</button>
        </div>

        {% include 'admin/chefs/fields.njk' %}
      </form>

    </div>
    
  </div>
  <script src="/scripts/script_delete.js"></script>
{% endblock %}