{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy</title>
{% endblock %}

{% block content %}
    <div class="content-container">
        <div class="banner">
            <div class="banner-text">
                <h2>As melhores receitas</h2>
                <p>
                    Aprenda a construir os melhores pratos
                    com receitas criadas por profissionais
                    do mundo inteiro.
                </p>
            </div>
            <div class="banner-image">
                <img src="/asserts/chef.png" alt="Chefe">
            </div>
        </div>

        <div class="must-accessed">
            <h3>Mais acessadas</h3>
        </div>

        <section class="recipes">
          {% for item in items %}
            <div class="recipe">
                <div class="recipe__image-container">
                    <img src="{{ item.image }}" alt="{{ item.title }}">
                </div>
                <div class="recipe__content">
                    <p>{{ item.title }}</p>
                </div>
                <div class="recipe__info">
                    <p>{{ item.author }}</p>
                </div>
            </div>
          {% endfor %}
        </section>
    </div>
 {% endblock %}